<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Crooked GitHub -->
  <remote  name="ca"
           revision="cr1"
           fetch="https://github.com/CrookedAndroid/" />

  <remote  name="ca-ssh"
           revision="cr1"
           fetch="ssh://git@github.com/CrookedAndroid/" />


  <!-- Bootable -->
  <project path="bootable/recovery" name="bootable_recovery" remote="ca" />

  <!-- Build -->
  <project path="build/make" name="build_make" remote="ca" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" remote="ca" groups="pdk,tradefed" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Frameworks -->
  <project path="frameworks/av" name="frameworks_av" remote="ca" />
  <project path="frameworks/base" name="frameworks_base" remote="ca" />
  <project path="frameworks/libs/systemui" name="frameworks_libs_systemui" remote="ca" />

  <!-- Manifest -->
  <project path="manifest" name="manifest" remote="ca" />

  <!-- Packages -->
  <project path="packages/apps/FaceUnlockService" name="packages_apps_FaceUnlockService" remote="ca" />
  <project path="packages/apps/Launcher3" name="packages_apps_Launcher3" remote="ca" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="ca" />
  <project path="packages/apps/ThemePicker" name="packages_apps_ThemePicker" remote="ca" />
  <project path="packages/modules/Connectivity" name="packages_modules_Connectivity" remote="ca" />
  
  <!-- Other Packages -->
  <remove-project name="android_packages_apps_StatiXOSWalls" />
  <project path="packages/apps/StatiXOSWalls" name="packages_apps_StatiXOSWalls" remote="ca" />

  <!-- System -->
  <project path="system/update_engine" name="system_update_engine" remote="ca" />

  <!-- Vendor -->
  <project path="vendor/crooked" name="vendor_crooked" remote="ca">
    <linkfile src="build/stop_scan.mk" dest="kernel/Android.mk" />
  </project>
  <project path="vendor/gms" name="CrookedAndroid/android_vendor_google_gms" revision="cr1" remote="gitlab" />

  <!-- Hardware --> 
  <project path="hardware/qcom/sdm845/display" name="hardware_qcom_sdm845_display" remote="ca" />
  <project path="hardware/qcom/sdm845/media" name="hardware_qcom_sdm845_media" remote="ca" />
  <project path="hardware/qcom/sm8150/display" name="android_hardware_qcom_sm8150_display" remote="ca" />
  <project path="hardware/qcom/sm8150/data/ipacfg-mgr" name="android_hardware_qcom_sm8150_data_ipacfg-mgr" remote="ca" />
</manifest>
